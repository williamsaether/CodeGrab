{
	"manifest_version": 3,
	"name": "CodeGrab",
	"version": "1.0",
	"description": "Chrome Extension for generating QR-/Barcodes.",
	"permissions": [
		"contextMenus",
		"storage",
		"scripting",
		"activeTab"
	],
	"background": {
		"service_worker": "dist/background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": [
				"lib/qrcode.min.js",
      	"lib/JsBarcode.all.min.js"
			]
		}
	],
	"web_accessible_resources": [
		{
			"resources": [
				"public/overlay.html",
				"public/overlay.css",
        "lib/JsBarcode.all.min.js",
        "lib/qrcode.min.js"
			],
			"matches": ["<all_urls>"]
		}
	],
	"host_permissions": [
		"<all_urls>"
	],
	"action" : {
		"default_title": "codegrab"
	}
}
