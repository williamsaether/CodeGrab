{
	"manifest_version": 3,
	"name": "CodeGrab",
	"version": "1.0",
	"description": "Right-click to generate QR codes or barcodes from elements on any page.",
	"permissions": [
		"contextMenus",
		"storage",
		"scripting",
		"activeTab"
	],
	"background": {
		"service_worker": "dist/background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": [
				"lib/qrcode.min.js",
      	"lib/JsBarcode.all.min.js"
			]
		}
	],
	"web_accessible_resources": [
		{
			"resources": [
				"public/overlay.html",
				"public/overlay.css",
				"public/icons/*",
        "lib/JsBarcode.all.min.js",
        "lib/qrcode.min.js",
				"lib/finder.umd.js"
			],
			"matches": ["<all_urls>"]
		}
	],
	"host_permissions": [
		"<all_urls>"
	],
	"action" : {
		"default_title": "CodeGrab",
		"default_icon": {
			"16": "public/icons/codegrab-blue@16x.png",
			"32": "public/icons/codegrab-blue@32x.png",
			"48": "public/icons/codegrab-blue@48x.png"
		}
	},
	"icons": {
		"16": "public/icons/codegrab-blue@16x.png",
		"32": "public/icons/codegrab-blue@32x.png",
		"48": "public/icons/codegrab-blue@48x.png",
		"128": "public/icons/codegrab-blue@128x.png"
	}
}
